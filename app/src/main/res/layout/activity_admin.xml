<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@drawable/admin_background"
    tools:context=".AdminActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"

        android:text="ADMIN LOGIN"
        android:textColor="#cae70d"
        android:textSize="@dimen/dimens_30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimens_24dp"
        android:layout_marginRight="@dimen/dimens_24dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminEmail"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/ic_email_black_24dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminPassword"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/ic_https_black_24dp"
            android:textColorHint="@color/colorWhite"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminRememberMe"
            android:text="@string/text_remember_me"
            android:textColor="@color/colorWhite"
            android:buttonTint="@color/colorWhite"
            android:textSize="@dimen/dimens_14sp" />

        <Button
            android:id="@+id/adminLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_14sp"
            android:layout_marginRight="@dimen/dimens_14sp"
            android:layout_marginTop="@dimen/dimens_24dp"
            android:background="#0d15f1"
            android:textColor="@color/colorWhite"
            android:text="Login" />

    </LinearLayout>
</RelativeLayout>