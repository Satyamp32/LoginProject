<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#df20c2"
        tools:context=".RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimens_24dp"
            android:layout_marginRight="@dimen/dimens_24dp"
            android:gravity="bottom"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textinputLayout"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/dimens_40dp"
                    android:background="@drawable/user_icon"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:textColor="#f7f6f6"
                android:background="#000000"
                android:drawableRight="@drawable/ic_error_black_24dp"
                android:text="image mandatory" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimens_14sp"
                android:text="First Name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_15sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_person_outline_black_24dp"
                    android:drawableRight="@drawable/ic_person_outline_black_24dp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingEnd="@dimen/dimens_14sp"
                    android:paddingLeft="@dimen/dimens_14sp"
                    android:paddingRight="@dimen/dimens_14sp"
                    android:paddingStart="@dimen/dimens_14sp"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:paddingLeft="@dimen/dimens_14sp"
                android:text="Last Name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textColorHint="@color/colorWhite">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/lastname"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/colorWhite"
                android:drawableEnd="@drawable/ic_person_outline_black_24dp"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:imeOptions="actionNext"
                android:paddingEnd="@dimen/dimens_14sp"
                android:paddingLeft="@dimen/dimens_14sp"
                android:paddingStart="@dimen/dimens_14sp"
                android:paddingRight="@dimen/dimens_14sp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite" />


        </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:paddingLeft="@dimen/dimens_14sp"
                android:text="Email Id"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_email_black_24dp"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:imeOptions="actionNext"
                    android:paddingEnd="@dimen/dimens_14sp"
                    android:paddingLeft="@dimen/dimens_14sp"
                    android:paddingRight="@dimen/dimens_14sp"
                    android:paddingStart="@dimen/dimens_14sp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorWhite"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_14sp"
                android:text="Date of birth"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/dimens_10dp"
                        android:background="@drawable/edittext_background"
                        android:drawableEnd="@drawable/ic_date_range_black_24dp"
                        android:drawableRight="@drawable/ic_date_range_black_24dp"
                        android:imeOptions="actionNext"
                        android:paddingStart="@dimen/dimens_14sp"
                        android:paddingRight="@dimen/dimens_14sp"
                        android:paddingLeft="@dimen/dimens_14sp"
                        android:paddingEnd="@dimen/dimens_14sp"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:paddingLeft="@dimen/dimens_14sp"
                android:text="Phone number"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_phone_black_24dp"
                    android:drawableRight="@drawable/ic_phone_black_24dp"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/dimens_14sp"
                    android:paddingEnd="@dimen/dimens_14sp"
                    android:paddingRight="@dimen/dimens_14sp"
                    android:paddingStart="@dimen/dimens_14sp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorWhite"/>


            </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:paddingLeft="@dimen/dimens_14sp"
            android:text="Password"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorWhite">


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/colorWhite"
                android:drawableEnd="@drawable/ic_visibility_off_black_24dp"
                android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimens_14sp"
                android:paddingStart="@dimen/dimens_14sp"
                android:paddingRight="@dimen/dimens_14sp"
                android:paddingEnd="@dimen/dimens_14sp"
                android:singleLine="true"
                android:textColor="@color/colorWhite" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:paddingLeft="@dimen/dimens_14sp"
            android:text="Confirm password"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorWhite">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="@color/colorWhite"
                android:drawableEnd="@drawable/ic_visibility_off_black_24dp"
                android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimens_14sp"
                android:paddingEnd="@dimen/dimens_14sp"
                android:paddingRight="@dimen/dimens_14sp"
                android:paddingStart="@dimen/dimens_14sp"
                android:singleLine="true"
                android:textColor="@color/colorWhite" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:layout_marginTop="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_10dp"
            android:background="@drawable/button_background"
            android:text="Register"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLoginLink"
            android:layout_marginBottom="@dimen/dimens_24dp"
            android:gravity="center"
            android:text="already a member login?"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>